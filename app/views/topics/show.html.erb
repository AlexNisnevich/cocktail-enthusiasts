<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @topic.title %>
</p>

<p>
  <b>Username:</b>
  <%= @topic.username %>
</p>

<p>
  <b>Description</b>
  <%= simple_format @topic.description %>
</p>

<hr>

<p>
  <b>Add Comment</b>
  <%= render 'comment_form' %>
</p>

<hr>

<p>
  <b>Comments</b>
  <% comments = @topic.comments %>
  <table>
    <tr>
      <th class="commentDescriptionCol"></th>
      <th>User</th>
    </tr>
  <% comments.each do |comment| %>
    <tr>
      <td><%= simple_format comment.description %></td>
      <td><%= comment.username %></td>
    </tr>
  <% end %>
  </table>
</p>


<%= link_to 'Edit', edit_topic_path(@topic) %> |
<%= link_to 'Back', topics_path %> |
<%= link_to 'Comments', view_comments_topic_path(@topic)%>